# .env  (Windows example with Trusted Connection)
DATABASE_URL=mssql+pyodbc://@localhost/price_comparison_v2?driver=ODBC+Driver+17+for+SQL+Server&trusted_connection=yes

# OR with SQL auth:
# DATABASE_URL=mssql+pyodbc://sa:YourStrong!Passw0rd@localhost:1433/price_comparison_v2?driver=ODBC+Driver+17+for+SQL+Server
APP_HOST=127.0.0.1
APP_PORT=8001
# Only write when price changed (default true)
SNAPSHOT_WRITE_ON_CHANGE_ONLY=true
# Float tolerance (default 0.001)
SNAPSHOT_PRICE_EPSILON=0.001
# Keep last N snapshots per (site, sku). 0 = keep all (no pruning). Default 3
SNAPSHOT_MAX_PER_SKU=3
